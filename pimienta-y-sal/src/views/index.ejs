<!DOCTYPE html>
<html>
<%- include('./partials/head.ejs') %> 
  <body>
    <!-- Navbar (sit on top) -->
<%- include('./partials/navbar.ejs') %> 

    <!-- Header -->
<%- include('./partials/header.ejs') %> 

    <!-- Page content -->
    <div class="ps-content">
      <!-- About Section -->
      <%- include('./partials/about.ejs') %> 
      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center">Nuestro Menu</h1>
          <br />

          <% platos.forEach(plato => { %> 
<h4> <a href="/detalle/<%= plato.id %> ">  <%= plato.title %> </a> </h4>
<p class="ps-text-grey"> <%= plato.description %> <%= plato.price %>  </p>



          <% }) %> 

        </div>
        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/menu.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
<%- include('./partials/footer.ejs') %> 
    </div>
  </body>
</html>
